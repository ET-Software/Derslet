<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OgretmenDegerlendirmeDetay">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ustbar_bg"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/mor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/baslik"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="sans-serif-black"
        android:text="21 OCAK 2021"
        android:textAlignment="center"
        android:textColor="@color/beyaz"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ustbar_bg"
        app:layout_constraintEnd_toEndOf="@+id/ustbar_bg"
        app:layout_constraintStart_toStartOf="@id/ustbar_bg"
        app:layout_constraintTop_toTopOf="@+id/ustbar_bg" />

    <ImageButton
        android:id="@+id/geri_buton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/buton_mor"
        app:layout_constraintBottom_toBottomOf="@+id/ustbar_bg"
        app:layout_constraintEnd_toStartOf="@+id/baslik"
        app:layout_constraintStart_toStartOf="@id/ustbar_bg"
        app:layout_constraintTop_toTopOf="@+id/ustbar_bg"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_33" />

    <TextView
        android:id="@+id/degerlendirme_soru1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/kare_10_0_10_0_beyaz_kenar_mor"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:text="Ders için puan ortalaması"
        android:textColor="@color/mor"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/degerlendirme_soru1_ortalama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ustbar_bg" />

    <TextView
        android:id="@+id/degerlendirme_soru1_ortalama"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/kare_0_10_0_10"
        android:backgroundTint="@color/mor"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="3.2"
        android:textColor="@color/beyaz"
        app:layout_constraintBottom_toBottomOf="@+id/degerlendirme_soru1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/degerlendirme_soru1"
        app:layout_constraintTop_toTopOf="@+id/degerlendirme_soru1" />

    <TextView
        android:id="@+id/degerlendirme_soru2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/kare_10_0_10_0_beyaz_kenar_mor"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:text="Öğretim elemanı için puan ortalaması"
        android:textColor="@color/mor"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/degerlendirme_soru2_ortalama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/degerlendirme_soru1" />

    <TextView
        android:id="@+id/degerlendirme_soru2_ortalama"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/kare_0_10_0_10"
        android:backgroundTint="@color/mor"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="3.0"
        android:textColor="@color/beyaz"
        app:layout_constraintBottom_toBottomOf="@+id/degerlendirme_soru2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/degerlendirme_soru2"
        app:layout_constraintTop_toTopOf="@+id/degerlendirme_soru2" />

    <TextView
        android:id="@+id/degerlendirme_genel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/kare_10_0_10_0_beyaz_kenar_mor"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:text="Degerlendirme ortalaması"
        android:textColor="@color/mor"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/degerlendirme_genel_ortalama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/degerlendirme_soru2" />

    <TextView
        android:id="@+id/degerlendirme_genel_ortalama"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/kare_0_10_0_10"
        android:backgroundTint="@color/mor"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="3.1"
        android:textColor="@color/beyaz"
        app:layout_constraintBottom_toBottomOf="@+id/degerlendirme_genel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/degerlendirme_genel"
        app:layout_constraintTop_toTopOf="@+id/degerlendirme_genel" />

    <View
        android:id="@+id/yatay_cizgi"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@color/mor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/degerlendirme_genel" />

    <ListView
        android:id="@+id/ogretmen_degerlendirme_yorum_listesi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="293dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/list_ogretmen_degerlendirme_detay"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:childDivider="@null"
        android:paddingBottom="25dp"
        android:clipToPadding="false" />
</androidx.constraintlayout.widget.ConstraintLayout>