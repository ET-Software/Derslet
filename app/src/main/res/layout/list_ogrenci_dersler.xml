<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ders_cerceve"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/kare_10_0_10_0_bos_kenar_mor"
        android:layout_toLeftOf="@+id/ders_bilgi"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ders_isim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="32.5dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Ders İsmi"
            android:textColor="@color/mor"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/ders_ogretmen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:text="Öğretmen İsim Soyisim"
            android:textColor="@color/mor"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/ders_bilgi"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/kare_0_10_0_10"
        android:backgroundTint="@color/mor"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="15"
        android:textColor="@color/beyaz"
        android:textSize="16sp" />
</RelativeLayout>