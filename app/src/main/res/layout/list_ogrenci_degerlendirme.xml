<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ders_cerceve"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/kare_10_0_10_0_bos_kenar_mor"
        android:layout_toLeftOf="@+id/degerlendirme_bilgi"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/degerlendirme_tarih_saat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="2021-06-22 / 21:34"
            android:textColor="@color/mor"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/degerlendirme_bilgi"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/kare_0_10_0_10"
        android:backgroundTint="@color/mor"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="Yapılmadı"
        android:textColor="@color/beyaz"
        android:textSize="16sp" />
</RelativeLayout>