<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/degerlendirme_baslik"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/kare_10_10_0_0"
            android:backgroundTint="@color/mor"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="Öğrencinin Değerlendirme Ortalaması: 4.17"
            android:textColor="@color/beyaz"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/degerlendirme_yorum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/kare_0_0_10_10_beyaz_kenar_mor"
            android:fontFamily="sans-serif"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:text="İçerik Yazısı"
            android:textColor="@color/mor"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>